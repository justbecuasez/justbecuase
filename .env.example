# ===========================================
# JustBecause Network Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/justbecause?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION (Better Auth)
# ===========================================
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# CLOUDINARY (Image Uploads)
# ===========================================
# Sign up at https://cloudinary.com and get these from your dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=volunteer_avatars
# Create an unsigned upload preset in Cloudinary settings:
# Settings -> Upload -> Upload presets -> Add upload preset
# Set "Signing Mode" to "Unsigned"

# ===========================================
# RAZORPAY (Payments)
# ===========================================
# Sign up at https://razorpay.com and get these from API Keys section
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# ===========================================
# OPTIONAL: VERCEL DEPLOYMENT
# ===========================================
# VERCEL_URL is automatically set by Vercel

# ===========================================
# OPTIONAL: OAUTH PROVIDERS
# ===========================================
# Google OAuth - https://console.developers.google.com
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth - https://www.linkedin.com/developers
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=

# ===========================================
# TWILIO (SMS OTP)
# ===========================================
# Sign up at https://www.twilio.com and get these from your console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_PROVIDER=twilio

# ===========================================
# VONAGE / NEXMO (SMS OTP - Alternative)
# ===========================================
# Sign up at https://dashboard.nexmo.com and get these from API Settings
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=JustBecause
# SMS_PROVIDER=vonage

# Note: Set SMS_PROVIDER to either 'twilio', 'vonage', 'msg91', 'textlocal', or 'none'
# Only one provider will be active at a time

# ===========================================
# STRIPE (Payment Gateway)
# ===========================================
# Sign up at https://stripe.com and get these from API Keys section
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
